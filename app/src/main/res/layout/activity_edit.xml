<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity"
    android:background="@color/grey">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/jodie" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Jodie Ivana Salim"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/uni"
                    tools:layout_editor_absoluteX="141dp"
                    tools:layout_editor_absoluteY="222dp" />

                <EditText
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Universitas Pelita Harapan"
                    android:textColor="@color/darkgrey"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imbMail"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="22dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="E-Mail"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mail" />

                <ImageButton
                    android:id="@+id/imbBehance"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="22dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Behance"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/behance" />

                <ImageButton
                    android:id="@+id/imbInstagram"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="22dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Instagram"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/imbLinkedin"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="22dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="LinkedIn"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/linkedin" />

                <ImageButton
                    android:id="@+id/imbDribble"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Dribble"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/dribble" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="35dp"
                    android:text="Skills"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="286dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/newfigma" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/newai" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/newps" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/newpr" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25dp"
                    android:text="Experiences"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="328dp"
                    android:layout_height="365dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="215dp"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="SISTECH 2022/2023"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="Head of MEDKOMINFO Department"
                                android:textColor="@color/white"
                                android:textSize="9sp" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/white"
                            android:text="Aug 2022 - Present"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="215dp"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="AoU Medan Campus  2023"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="Head of Design Team"
                                android:textColor="@color/white"
                                android:textSize="9sp" />
                        </LinearLayout>


                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/white"
                            android:text="Jan 2023 - Present"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="252dp"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="menara: Metaverse in Nusantara"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="Head of Design Team"
                                android:textColor="@color/white"
                                android:textSize="9sp" />
                        </LinearLayout>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/white"
                            android:text="Nov 2022"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="252dp"
                            android:layout_height="80dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="DoTS: Day of Togetherness &amp; Sharing"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:backgroundTint="@color/white"
                                android:text="Head of Design Team"
                                android:textColor="@color/white"
                                android:textSize="9sp" />
                        </LinearLayout>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/white"
                            android:text="Sep 2022"
                            android:textColor="@color/white"
                            android:textSize="9sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>